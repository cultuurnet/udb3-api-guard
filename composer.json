{
  "name": "cultuurnet/udb3-api-guard",
  "description": "",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Publiq vzw",
      "email": "info@2publiq.be"
    }
  ],
  "require": {
    "cultuurnet/valueobjects": "~3.0",
    "psr/http-message": "^1.0",
    "phpstan/phpstan": "^0.12.74"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.5",
    "satooshi/php-coveralls": "~0.7",
    "slim/psr7": "^0.5.0",
    "cultuurnet/culturefeed-php": "~1.8"
  },
  "suggest": {
    "cultuurnet/culturefeed-php": "To use the CultureFeed implementations of ApiKey and Consumer interfaces."
  },
  "autoload": {
    "psr-4": {
      "CultuurNet\\UDB3\\ApiGuard\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CultuurNet\\UDB3\\ApiGuard\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-0.x": "0.x-dev"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan analyse",
    "phpcs": "vendor/bin/phpcs -p",
    "ci": [
      "composer phpstan",
      "composer test",
      "composer phpcs"
    ]
  }
}
